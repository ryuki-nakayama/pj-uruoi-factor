{%- comment -%}
  contact-link
  お問い合わせページへのリンク

  Use:
  - none

  Style:
  - sections/contact-link.scss

  Script:
  - none
{%- endcomment -%}

<div class="contact-link original-section">
  <div class="Container">
    {%- if section.settings.content != blank -%}
      <div class="contact-link__text Rte">
        {{ section.settings.content }}
      </div>
    {%- endif -%}
    <div class="contact-link__link-wrapper">
      <a href="{{ section.settings.link_url }}" class="contact-link__link">
        <span class="ja">お問い合わせフォーム</span>
        <span class="en">CONTACT</span>
      </a>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Contact link",
  "settings": [
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Contact link",
      "settings": {}
    }
  ]
}
{% endschema %}