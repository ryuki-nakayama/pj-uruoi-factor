{%- comment -%}
  section-file-name
  ファイル概要

  Use:
  - snippets.liquid

  Style:
  - sections/section.scss

  Script:
  - section.js
{%- endcomment -%}

<footer class="footer">
  <div class="Container">
    {%- assign linklist = linklists[section.settings.menu] -%}
    {%- if linklist != empty -%}
      <h2 class="Footer__Title Heading u-h6"><a href="/">TOP</a></h2>
      <ul class="footer__list">
        {%- for link in linklist.links -%}
          <li class="footer__item ">
            {%- unless forloop.first -%}
              <span class="footer__slash">/</span>
            {%- endunless -%}
            <a href="{{ link.url }}" class="Link Link--primary">{{ link.title | escape }}</a>
          </li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
  </div>
</footer>

{% schema %}
{
  "name": "New footer",
  "class": "shopify-section--footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "info": "This menu won't show dropdown items."
    }
  ]
}
{% endschema %}