<div class="Container">
  <ul class="banner-list__list">
    {% for block in section.blocks %}
      <li class="banner-list__item">
        <div class="banner" style="background-image: url({{ block.settings.img | img_url: 'master' }});">
          <div class="banner__inner">
            <div class="banner__cont">
              <p class="banner__header">{{ block.settings.header }}</p>
              <a href="{{ block.settings.link }}" class="banner__link Button Button--primary">{{ block.settings.btn-text }}</a>
            </div>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "Banner List",
  "tag": "section",
  "class": "ud-section spaced-section banner-list",
  "blocks": [
    {
      "name": "Banner",
      "type": "banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "img",
          "label": "Banner Image"
        },
        {
          "type": "text",
          "id": "header",
          "label": "Header"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "btn-text",
          "label": "Button Text"
        }
      ]
    }
  ],
  "presets": [
  {
    "category": "Ud Section",
    "name": "Ud Banner List"
  }
]
}
{% endschema %}