/* banner-list
--------------------------------------------------*/
.banner-list__item {
  width: 100%;
  position: relative;
  margin: 2.4rem 0;
}
.banner-list__item .banner {
  padding-top: 56.25%;
  position: relative;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
.banner-list__item .banner__inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 16px 10px
}
.banner-list__item .banner__cont {
  position: absolute;
  bottom: 24px;
  left: 16px;
}
.banner-list__item .banner__header {
  color: white;
  font-size: 16px;
  margin-bottom: 8px;
  font-weight: bold;
  background-color: rgba(0, 0, 0, .1);
  text-align: center;
}
.banner-list__item .banner__link {
  padding: .6em .8em;
}
.banner-list__item .banner__link::before {
  transition: transform 0.45s cubic-bezier(0.785, 0.135, 0.15, 0.86);
}
@media screen and (min-width: 769px) {
  .banner-list__list {
    display: flex;
    justify-content: space-between;
  }
  .banner-list__item {
    width: calc((100% - (12px * 2)) / 3 );
    position: relative;
    margin: 2.4rem 0;
  }
  .banner-list__item .banner__cont {
    bottom: 32px;
    left: 16px;
  }
}
@media screen and (min-width: 1008px) {
  .banner-list__item {
    width: calc((100% - (24px * 2)) / 3 );
  }
  .banner-list__item .banner__inner {
    padding: 32px 24px;
  }
}

/* icon-link-list
--------------------------------------------------*/
.icon-link-list__list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin: 2rem;
}
.icon-link-list__item {
  width: 50%;
  padding-top: 50%;
  list-style: none;
  position: relative;
}
.icon-link-list__item .icon-link {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: 80px;
  width: 100%;
}
.icon-link-list__item .icon-link__link {
  display: block;
  width: 100%;
  height: 100%;
}
.icon-link-list__item .icon-link__text {
  text-align: center;
  margin-top: 10px;
}

/* blog
--------------------------------------------------*/
.blog__header {
  padding-left: 1rem;
  padding-right: 1rem;
  border-left: 1px solid #ddd;
  border-right: 1px solid #ddd;
  text-align: center;
}
.blog__header .blog__title {
  font-size: 26px !important;
  margin: 0 0 8px;
  line-height: 1.1;
}
.blog__header .blog__sub-title {
  font-size: 14px !important;
  margin: 0;
}
.blog__header .fw-b {
  font-weight: bold;
}
.blog__header .ff-serif {
  font-family: 'Stardos Stencil', cursive, serif;
}
.blog-video {
  width: 100%;
  margin: 0 auto;
}
.blog-img-with-text {
  display: flex;
  margin-top: 24px;
}
.blog-img-with-text--reverse {
  flex-direction: row-reverse;
}
.blog-img-with-text__img-wrap {
  width: 77px;
  height: 77px;
  border-radius: 50%;
  overflow: hidden;
}
.blog-img-with-text__img-wrap img {
  object-fit: cover;
  width: 100%;
  height: 100%;
  margin: 0;
}
.blog-img-with-text__text-wrap {
  flex: 1;
  margin: 0;
  margin-left: 24px;
}
.blog-img-with-text--reverse .blog-img-with-text__text-wrap {
  margin: 0;
  margin-right: 24px;
}
.blog-img-with-text__text-wrap p {
  margin: 0;
}

/* blog-category
--------------------------------------------------*/
.blog-category__video {
  max-width: 100%;
  width: 100%;
  display: block;
}
.blog-category .ff-serif {
  font-family: 'Stardos Stencil', cursive, serif;
}
@media screen and (min-width: 641px) {
  .blog-category {
      display: flex;
      max-width: 700px;
      margin: 0 auto;
  }
  .blog-category__video {
      width: 50%;
  }
  .blog-category__text-wrap {
      width: 50%;
      padding-left: 24px;
  }
  .blog-category__title {
    font-size: 2.5rem;
    line-height: 1.5;
  }
}
@media screen and (max-width: 640px) {
  .blog-category__text-wrap {
      text-align: center;
      margin-top: 16px;
  }
}

/* pull-down
--------------------------------------------------*/
.pull-down {
  margin-bottom: 1.6em;
}
.pull-down__head {
  margin-bottom: .6em !important;
  border-bottom: 1px solid rgba(106, 106, 106, .6);
  position: relative;
}
.pull-down__head::before,
.pull-down__head::after {
  position: absolute;
  content: '';
  top: 50%;
  right: 16px;
  width: 12px;
  height: 1px;
  background-color: #6a6a6a;
  transition: transform .3s ease;
}
.pull-down__head::after {
  transform: rotate(90deg);
}
.pull-down__head._open::after {
  transform: rotate(0);
}
.pull-down__body {
  display: none;
}

/* scrolled-underline
--------------------------------------------------*/
.scrolled-underline {
  position: relative;
  display: inline-block;
}
.scrolled-underline::before {
  position: absolute;
  content: '';
  width: 0;
  height: 3px;
  bottom: 3px;
  left: 0;
  background-color: rgba(255, 20, 147, .3);
  transition: width .3s;
}
.scrolled-underline._active::before {
  width: 100%;
}

