/* banner-list
--------------------------------------------------*/
.banner-list__item {
  width: 100%;
  position: relative;
  margin: 2.4rem 0;
}
.banner-list__item .banner {
  padding-top: 56.25%;
  position: relative;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
.banner-list__item .banner__inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 16px 10px
}
.banner-list__item .banner__cont {
  position: absolute;
  bottom: 24px;
  left: 16px;
}
.banner-list__item .banner__header {
  color: white;
  font-size: 16px;
  margin-bottom: 8px;
}
.banner-list__item .banner__link {
  padding: .6em .8em;
}
.banner-list__item .banner__link::before {
  transition: transform 0.45s cubic-bezier(0.785, 0.135, 0.15, 0.86);
}
@media screen and (min-width: 769px) {
  .banner-list__list {
    display: flex;
    justify-content: space-between;
  }
  .banner-list__item {
    width: calc((100% - (12px * 2)) / 3 );
    position: relative;
    margin: 2.4rem 0;
  }
  .banner-list__item .banner__cont {
    bottom: 32px;
    left: 16px;
  }
  .banner-list__item .banner__header {
    font-size: 20px;
  }
}
@media screen and (min-width: 1008px) {
  .banner-list__item {
    width: calc((100% - (24px * 2)) / 3 );
  }
  .banner-list__item .banner__inner {
    padding: 32px 24px;
  }
}

/* icon-link-list
--------------------------------------------------*/
.icon-link-list__list {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin: 2rem;
}
.icon-link-list__item {
  width: 50%;
  padding-top: 50%;
  list-style: none;
  position: relative;
}
.icon-link-list__item .icon-link {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: 80px;
  width: 100%;
}
.icon-link-list__item .icon-link__link {
  width: 100%;
  height: 100%;
}
.icon-link-list__item .icon-link__text {
  text-align: center;
  margin-top: 10px;
}

/* blog
--------------------------------------------------*/
.blog-video {
  width: 100%;
  margin: 0 auto;
}
.blog-img-with-text {
  display: flex;
  margin-top: 24px;
}
.blog-img-with-text--reverse {
  flex-direction: row-reverse;
}
.blog-img-with-text__img-wrap {
  width: 77px;
  height: 77px;
  border-radius: 50%;
  overflow: hidden;
}
.blog-img-with-text__img-wrap img {
  object-fit: cover;
  width: 100%;
  height: 100%;
}
.blog-img-with-text__text-wrap {
  flex: 1;
}
.blog-img-with-text__text-wrap p {
  margin: 0;
  margin-left: 24px;
}
.blog-img-with-text--reverse .blog-img-with-text__text-wrap p {
  margin: 0;
  margin-right: 24px;
}