/* common
--------------------------------------------------*/
.ud-section ul,
.ud-section ol,
.ud-section li {
  list-style: none;
}

/* banner-list
--------------------------------------------------*/
.banner-list__item {
  width: 100%;
  position: relative;
  margin: 2.4rem 0;
}
.banner-list__item .banner {
  padding-top: 56.25%;
  position: relative;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
.banner-list__item .banner__inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 16px 10px
}
.banner-list__item .banner__cont {
  position: absolute;
  bottom: 24px;
  left: 16px;
}
.banner-list__item .banner__header {
  color: white;
  font-size: 16px;
  margin-bottom: 8px;
}
.banner-list__item .banner__link {
  /* background-color: var(--button-background);
  color: white; */
  padding: .6em .8em;
}
.banner-list__item .banner__link::before {
  transition: transform 0.45s cubic-bezier(0.785, 0.135, 0.15, 0.86);
}
@media screen and (min-width: 769px) {
  .banner-list__list {
    display: flex;
    justify-content: space-between;
  }
  .banner-list__item {
    width: calc((100% - (12px * 2)) / 3 );
    position: relative;
    margin: 2.4rem 0;
  }
  .banner-list__item .banner__cont {
    bottom: 32px;
    left: 16px;
  }
  .banner-list__item .banner__header {
    font-size: 20px;
  }
}
@media screen and (min-width: 1008px) {
  .banner-list__item {
    width: calc((100% - (24px * 2)) / 3 );
  }
  .banner-list__item .banner__inner {
    padding: 32px 24px;
  }
}