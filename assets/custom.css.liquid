/* common
--------------------------------------------------*/
.ud-section ul,
.ud-section ol,
.ud-section li {
  margin: 0;
  padding: 0;
  list-style: none;
}

/* banner-list
--------------------------------------------------*/
.banner-list__item {
  width: 100%;
  position: relative;
  margin: 2.4rem 0;
}
.banner-list__item .banner {
  padding-top: 56.25%;
  position: relative;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}
.banner-list__item .banner__inner {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 16px 10px;
}
.banner-list__item .banner__header {
  color: white;
  font-size: 16px;
}
@media screen and (min-width: 641px) {
  .banner-list__list {
    display: flex;
    justify-content: space-between;
  }
  .banner-list__item {
    width: calc((100% - (12px * 2)) / 3 );
    position: relative;
    margin: 2.4rem 0;
  }
  .banner-list__item .banner__header {
    font-size: 20px;
  }
}
@media screen and (min-width: 1008px) {
  .banner-list__item {
    width: calc((100% - (24px * 2)) / 3 );
  }
  .banner-list__item .banner__inner {
    padding: 32px 24px;
  }
}